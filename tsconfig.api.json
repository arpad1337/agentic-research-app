{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["esnext", "DOM"],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "outDir": "./build/api",
      "noImplicitAny": false,
      "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": ["src/api/**/*.ts"],
    "exclude": ["node_modules"]
  }
