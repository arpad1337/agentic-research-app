{
  "include": [
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/app/**/.server/**/*.ts",
    "src/app/**/.server/**/*.tsx",
    "src/app/**/.client/**/*.ts",
    "src/app/**/.client/**/*.tsx",
    "src/types"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/node", "vite/client", "react"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "~/*": ["./src/app/*"],
      "@/*": ["./src/app/*"],
    },

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}